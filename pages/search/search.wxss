.searchContainer {
  padding: 0 20rpx;
}

.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}

.searchInput {
  position: relative;
  flex: 1;
  background-color: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.clear {
  position: absolute;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
  z-index: 2;
}
.cancel {
  width: 100rpx;
  text-align: center;
}
.searchIcon {
  position: absolute;
  left: 15rpx;
}
.searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
}
.input-placeholder {
  font-size: 28rpx;
}

/* 热搜榜 */
.hotContaienr .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
}

.hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hotItem .order {
  margin: 0 10rpx;
}
.iconImg {
  width: 35rpx;
  height: auto;
  margin-left: 10rpx;
}
.iconImg2 {
  width: 20rpx;
  height: auto;
  margin-left: 10rpx;
}

/* 搜索内容展示 */
.searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #d43c33;
}

.searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}

.searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 26rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/* 搜索历史 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
}
.history .title {
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem {
  font-size: 26rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.history .delete {
  position: absolute;
  bottom: 25rpx;
  right: 15rpx;
  font-size: 36rpx;
}
